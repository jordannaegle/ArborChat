<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArborChat.MainPage">

    <Grid RowDefinitions="*, Auto">

        <!-- Message Display -->
        <CollectionView Grid.Row="0" Margin="10">
            <!-- ItemTemplate will be defined later -->
        </CollectionView>

        <!-- Message Input -->
        <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Padding="10">
            <Editor Grid.Column="0" Placeholder="Type your message..." />
            <Button Grid.Column="1" Text="Send" />
        </Grid>

    </Grid>

</ContentPage>
